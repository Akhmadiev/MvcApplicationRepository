@{
    ViewBag.Title = "Редактировать";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model MvcApplication.Models.Car
<h2>Книга № @Model.Id</h2>
@using (Html.BeginForm("EditCar", "Home", FormMethod.Post))
{
    <fieldset>
        @Html.HiddenFor(m => m.Id)
        <p>
            @Html.LabelFor(m => m.Number, "Порядковый номер")
            <br />
            @Html.DisplayFor(m => m.Number)
        </p>
        <p>
            @Html.LabelFor(m => m.Name, "Название")
            <br />
            @Html.EditorFor(m => m.Name)
        </p>
        <p>
            @Html.LabelFor(m => m.CreateDate, "Дата создания")
            <br />
            @Html.DisplayFor(m => m.CreateDate)
        </p>
        <p>
            @Html.LabelFor(m => m.ChangeDate, "Дата изменения")
            <br />
            @Html.DisplayFor(m => m.ChangeDate)
        </p>
        <p><input type="submit" value="Отправить" /></p>
    </fieldset>
}